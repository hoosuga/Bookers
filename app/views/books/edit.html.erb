<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div class="error_explanation">
    <div class="errors_count">
      <%= @book.errors.count %>error prohibited this book from being saved:
    </div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
</div>
  <% end %>
<%= form_with model: @book, url:book_path(@book.id) do |f| %>
  <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.submit "Update Book" %>
  </div>
<% end %>

<%= link_to "Show", book_path(@book.id), class:"cursor" %>
